            <a href="<%= twitter[i+1].link %>" class="btn btn-primary" style="padding-top: 3px;padding-bottom: 3px;width: 100%;">Direct Link</a>
        </div>
        <%}%>

    </div>
<% } %>
    </div>
</div>

<br><br>
<!--instagram-->
<div class="container">
    <div class="row">
        <% for(var i=0; i < insta.length; i=i+2) { %>
        <div class="card col-sm-3" style="width: 20rem; border:none">
            <% if(insta[i].preview != 'null'){%>
            <div class="text-center">
                <img class="card-img-top img-thumbnails"  height="250px" width="250px" src="<%= insta[i].preview %>" alt="Card image cap">
            </div>
            <% }%>
            <div class="card-block" style="padding:0px">
                <!--<h4 class="card-title">Card title</h4>-->
                <p class="card-text" style="margin:10px 0px"><%= insta[i].caption %></p>
            </div>
        </div>
        <div class="card col-sm-3" style="width: 20rem; border:none">
            <%
            if(insta[i+1] == null) {
                console.log("sleeplis");
            }
            else if(insta[i+1].preview != 'null'){ %>
