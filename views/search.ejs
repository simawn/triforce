<!--twitter-->
    <div class="row">
<% for(var i=0; i < twitter.length; i=i+2) { %>
<div class="card col-sm-3" style="width: 20rem; border:none; margin-bottom:35px">
    <% if(twitter[i].media_link != 'null'){%>
    <div class="text-center">
    <img class="card-img-top img-thumbnails" height="250px" width="250px" src="<%= twitter[i].media_link %>" alt="Card image cap">
    </div>
    <% }%>
    <div class="card-block" style=" padding: 0;">
        <p class="card-text" "><%= twitter[i].text %><br>
            <span class="card-title" style="font-weight: bold;">via twitter</span><br>
</p>

        <a href="<%= twitter[i].link %>" class="btn btn-primary" style="padding-top: 3px;padding-bottom: 3px;width: 100%;">Direct Link</a>

    </div>
</div>
